{
	"name": "express-ws",
	"version": "1.0.0",
	"description": "Test-Driven Development with Express",
	"main": "app.js",
	"scripts": {
		"start": "cross-env NODE_ENV=development nodemon index",
		"test": "cross-env NODE_ENV=test jest --watch",
		"lint": "eslint ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alchemistbg/udemy-node.js-with-tdd.git"
	},
	"author": "alchemistbg",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/alchemistbg/udemy-node.js-with-tdd/issues"
	},
	"homepage": "https://github.com/alchemistbg/udemy-node.js-with-tdd#readme",
	"dependencies": {
		"bcrypt": "^5.0.0",
		"config": "^3.3.1",
		"express": "^4.17.2",
		"express-validator": "^6.5.0",
		"i18next": "^19.4.5",
		"i18next-fs-backend": "^1.0.6",
		"i18next-http-middleware": "^2.1.2",
		"nodemailer": "^6.4.8",
		"sequelize": "^5.21.12",
		"sqlite3": "^4.2.0"
	},
	"devDependencies": {
		"cross-env": "^7.0.2",
		"eslint": "^7.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"jest": "^26.0.1",
		"jest-watch-typeahead": "^0.6.0",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5",
		"smtp-server": "^3.6.0",
		"supertest": "^4.0.2"
	},
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": 2018
		},
		"extends": [
			"eslint:recommended",
			"plugin:prettier/recommended"
		],
		"plugins": [
			"prettier"
		],
		"env": {
			"node": true,
			"es6": true,
			"jest": true
		},
		"rules": {
			"eqeqeq": "warn",
			"quotes": [
				"warn",
				"single"
			],
			"prettier/prettier": [
				"warn"
			]
		}
	},
	"prettier": {
		"singleQuote": true,
		"printWidth": 120,
		"endOfLine": "lf",
		"tabWidth": 4,
		"useTabs": true
	},
	"jest": {
		"watchPlugins": [
			"jest-watch-typeahead/filename",
			"jest-watch-typeahead/testname"
		],
		"verbose": true
	}
}
